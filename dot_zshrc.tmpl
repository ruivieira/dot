# Path to your oh-my-zsh configuration.
ZSH=$HOME/.oh-my-zsh

export ZSH_THEME="sunrise"

# Set to this to use case-sensitive completion
CASE_SENSITIVE="false"

# Comment this out to disable weekly auto-update checks
# DISABLE_AUTO_UPDATE="true"

plugins=(emoji git osx mvn rust zsh-autosuggestions history-substring-search zsh-syntax-highlighting)

source $ZSH/oh-my-zsh.sh
source $HOME/.functions.zsh
source $HOME/.builders.zsh

# aliases
source $HOME/.aliasrc

{{- if eq .chezmoi.os "darwin" }}
test -e ${HOME}/.iterm2_shell_integration.zsh && source ${HOME}/.iterm2_shell_integration.zsh
{{- end }}

###-tns-completion-start-###
if [ -f $HOME/.tnsrc ]; then
    source $HOME/.tnsrc
fi
###-tns-completion-end-###

# set a more comprehensive format for `time`
TIMEFMT='%J   %U  user %S system %P cpu %*E total'$'\n'\
'avg shared (code):         %X KB'$'\n'\
'avg unshared (data/stack): %D KB'$'\n'\
'total (sum):               %K KB'$'\n'\
'max memory:                %M MB'$'\n'\
'page faults from disk:     %F'$'\n'\
'other page faults:         %R'

PROMPT='$(random_emoji animals)':$PROMPT

ZSH_THEME_GIT_PROMPT_PREFIX="("
ZSH_THEME_GIT_PROMPT_SUFFIX=")"
ZSH_THEME_GIT_PROMPT_DIRTY=" ✗"
ZSH_THEME_GIT_PROMPT_CLEAN=" ✔"

# git editor
EDITOR=/usr/local/bin/code

# Go language variables
export GOPATH=$HOME/Sync/code/go
export GOROOT=/usr/local/opt/go/libexec
export PATH=$PATH:$GOPATH/bin:$GOROOT/bin

# B2 account
export B2_ACCOUNT_ID='{{ keepassxcAttribute "B2" "account_id" }}'
export B2_ACCOUNT_KEY='{{ keepassxcAttribute "B2" "account_key" }}'
export RESTIC_PASSWORD='{{ (keepassxc "Restic").Password }}'

# AWS/Wasabi
export AWS_ACCESS_KEY_ID='{{ keepassxcAttribute "Wasabi" "backup_user_key_id" }}'
export AWS_SECRET_ACCESS_KEY='{{ keepassxcAttribute "Wasabi" "backup_user_secret_key" }}'

# sourcehut OAuth token
export SOURCEHUT_PAGES_OAUTH="{{ keepassxcAttribute "Sourcehut" "oauth" }}"

# call neofetch
neofetch --iterm2 ~/.images/hexley.png --size 500px

eval "$(starship init zsh)"
